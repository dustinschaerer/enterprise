.container-fluid
  .row
    .col-xs-12
      %h1.text-center.my-3
        Debuggers
  .row
    - @debuggers.each do |debugger|
      .col-xs-12.col-sm-6.col-md-4.mb-3
        .card
          %div{ :id => "#{debugger.id}"}
            .card-header
              %h4.card-title= debugger.name
            %img.card-img-top.img-fluid{:src => "http://placehold.it/600x200"}/
            .card-block
              %h6.card-subtitle.text-muted
                Ruby:
                = debugger.ruby_version.version
              %br
              %h6.card-subtitle.text-muted
                Puppet:
                = debugger.puppet_version.version
              %br
              %h6.card-subtitle.text-muted
                Puppet Modules:
                -pms = []
                - debugger.puppet_modules.each do |pm|
                  - pms << pm.name
                = pms.join(", ")
            .card-block
              / = link_to 'Add to Profile', user_debugger_assignments_path(debugger), class: 'btn btn-primary', method: :post
              %a.btn.btn-primary{:href => "#"} View Details
              %a.btn.btn-primary{:href => "#"} Use This
